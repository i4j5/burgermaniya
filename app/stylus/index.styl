.header
  height 450px
  width 100%
  background-color #fff
  background-image url(../images/bg.jpg)
  background-repeat no-repeat
  background-position bottom center
  margin-bottom 50px
  
.footer
  width 100%
  padding 10px 0
  background-color #4a4a4a

.title
  text-align center
  font-size 30px 
  color #000
  line-height 1.2em
  margin-bottom 10px
  
.logo
  display table
  margin auto
  margin-top 5px
  font-size 20px
  line-height 40px
  text-align left
  font-weight 900
  span
    color #D64D4D
  img
    float left
    width 40px
    margin-right 4px
  &__description
    font-size 12px
    line-height 1.2em
    margin-top 5px
    color #222

.phone
  display table
  margin auto
  background-image url(../images/phone.png)
  background-repeat no-repeat
  background-position left center
  text-align left
  padding-left 35px
  margin-top 5px
  color #000
  font-size 20px
  line-height 30px
  font-weight 900
 
 .schedule
 	display table
 	margin auto
 	font-size 13px
 	line-height 1em
 	color #000
  padding-left 35px
 	text-align left
 	margin-top 5px
   
.offer
  text-align center
  font-size 35px
  line-height 1.15em
  font-weight 900
  // margin-top 5px
  color #000
 
.cart-open
  overflow-y hidden
  
.cart
  z-index 100
  position fixed
  top 0
  bottom 0
  right -280px
  width 280px
  height 100%
  transition all .2s linear
  &_null
    right -320px
  &_active
    right 0
    .cart__bg
      visibility visible
      opacity .6z
  &__header
    // margin-bottom 10px
    padding 5px 0 8px 0
    text-align center
    line-height 1.1em
    font-size 18px
    font-weight 900
    // background-color #fdfdfd
    // border-bottom-right-radius 2px
    // border-bottom-left-radius 2px
  &__image
    width 40px
    margin-right 8px
    display table
    margin auto
  &__title
    margin-top 5px
    font-size 14px
    line-height 1.1em
    font-weight 500
    text-align center
  &__quantity
    display table
    // margin auto
    margin-top 5px
  &__quantity-val
    float left
    text-align center
    display inline-block
    width 45px
    height 20px
    font-size 14px
    font-weight 300
    line-height 20px
    span
      font-size 10px
  &__plus
    opacity 0.4
    cursor pointer
    background-image url(../images/plus.png)
    background-repeat no-repeat
    background-position center
    float left
    display inline-block
    width 20px
    height 20px
    transition all .2s linear
    &:hover
      opacity 0.6
  &__minus
    opacity 0.4
    cursor pointer
    background-image url(../images/minus.png)
    background-repeat no-repeat
    background-position center
    float left
    display inline-block
    width 20px
    height 20px
    &:hover
      opacity 0.6
  &__price
    text-align center
    font-size 14px
    line-height 1.05em
    margin-top 10px
    font-weight 300
    span
      font-size 10px
  &__item
    padding 10px
    margin 2px 0
    position relative
    background #fff
    border-radius 2px
  &__clean
    opacity 0.3
    cursor pointer
    background-image url(../images/clean.png)
    background-repeat no-repeat
    background-position center
    display inline-block
    width 20px
    height 20px
    position absolute
    top 3px
    right 3px
    z-index 300
    transition all .2s linear
    &:hover
      opacity 0.5
  &__total
    text-align center
    font-weight 15px
    line-height 1em
    font-weight 500
    padding 10px
    // margin 3px 0
    position relative
    background #fff
    border-radius 2px
  &__bg
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    background #000
    transition all .2s linear
    opacity .5
    visibility hidden
  &__icon
    width 60px
    height 50px
    position absolute
    top 50%
    margin-top -20px
    left -40px
    background-color #ECECEC
    background-image url(../images/cart.png)
    background-repeat no-repeat
    background-position 8px center
    display inline-block
    cursor pointer  
    border-top-left-radius 2px
    border-bottom-left-radius 2px
    z-index 50
  &__body  
    z-index 100
    padding 0px 10px
    position relative
    width 100%
    height 100%
    background #ECECEC
    overflow-y auto

.btn
  display inline-block
  font-size 14px
  line-height 1em
  padding .8em 15px .8em 40px
  background-color #D64D4D
  background-image url(../images/btn.png)
  background-repeat no-repeat
  background-position 11px center
  color #fff
  border-radius 2px
  transition all .1s linear
  cursor pointer
  font-weight 500
  &:hover
    background-color #CA2020
  &:active
    background-color #A02626
  
.catalog
 text-align center 
 margin-bottom 50px

@keyframes product_active
  0%
    opacity 0
    display none
  100%
    opacity 1
    display inline-block

.product
  transition all .2s linear
  margin 10px 
  margin-bottom 11px
  // float left
  opacity 1
  display none
  &_active
    animation-name product_active
    animation-duration 2s
    opacity 1
    display inline-block
  &__body
    border-radius 2px
    width 220px
    height 400px
    background #fff
    padding 10px 15px
    box-shadow 0px 1px 5px 1px rgba(236, 236, 236, .6)
    border 1px solid #eee
    transition all .2s linear
    &:hover
      border 1px solid #ddd
      box-shadow 0px 1px 10px 4px #ececec
  &__title
    height 20px
    text-align center 
    font-size 20px
    font-weight 900
    line-height 1em
    margin-bottom 10px
  &__description
    margin-bottom 10px
    text-align left 
    font-size 13px
    font-weight 200
    line-height 1.2em
    color #565656
    height 90px
  &__image
    display block
    margin 10px auto
    height 150px
    img
      max-width 100%
      height 150px
  &__price
    height 20px
    font-size 16px
    line-height 20px
    font-weight 900
    margin-bottom 10px
    color #000

.category  
  cursor pointer
  display inline-block
  margin 0 15px 10px 15px
  &__body
    position relative
    padding 10px 0px
  &__title
    text-align center 
    font-size 16px
    font-weight 400
    line-height 20px
    display inline-block
  &__image
    display block
    width 40px
    height 40px
    margin auto
    margin-bottom 2px
  &_active
    .category__title
      color #D64D4D
  
@require "mixins/placeholder.styl"
.form
  margin-top 15px
  margin-bottom 8px
  background-color #fff
  padding 10px 15px
  border-radius 2px
  &__title
    margin 5px 0 15px 0
    text-align center
    line-height 1.1em
    font-size 17px
    font-weight 900
    color #000
  &__input
  &__textarea
  &__btn
    appearance none
    box-sizing border-box
    line-height 1.1em
    zoom 1
    outline none
    padding 10px
    width 100%
    font-weight 300
    color #000
    border 1px solid #C4C4C4
    background-color #F2F2F2
    border-radius 2px
    margin-bottom 5px
    font-size 14px
    +placeholder()
      color #a4a4a4
    &:focus
      outline none     
  &__input
    &_error
      background-color #FBDDDD
  // &__textarea
  //   // height 50px
  &__btn
    // margin-top -2px
    font-size 15px
    border 0
    background #D64D4D
    color #fff
    transition all .2s linear
    cursor pointer
    font-weight 500
    &:hover
      background-color #CA2020
    &:active
      background-color #A02626
      
