@import url(https://fonts.googleapis.com/css?family=Philosopher:400,700,400italic,700italic&subset=latin,cyrillic)
body 
  background #fff
  text-align center
  padding-top 50px
  font-family 'Philosopher', sans-serif
  
.header
  margin-bottom 50px
  
.logo
  font-size 30px
  text-align center
  span
    color #D64D4D
  img
    width 100px
    
.cart
  // float right
  text-align left
  height 32px
  font-size 14px
  line-height 15px
  color #808080
  font-weight 300
  padding-left 35px
  background-image url(../images/cart.png)
  background-repeat no-repeat
  background-position left center
  display inline-block
  span 
    color #000
    line-height 22px
    text-align center
    font-weight 900

.btn
  display inline-block
  font-size 14px
  line-height 1em
  padding .8em 2em
  background #D64D4D
  color #fff
  
.product
  // display none
  display inline-block
  transition all .1s linear
  margin 10px 
  margin-bottom 11px
  float left
  &_active
    display inline-block
  &__body
    width 220px
    height 400px
    background #fff
    padding 10px 15px
    box-shadow 0px 1px 5px 1px rgba(236, 236, 236, .6)
    border 1px solid #eee
    transition all .2s linear
    &:hover
      border 1px solid #ddd
      box-shadow 0px 1px 10px 4px #ececec
  &__title
    height 20px
    text-align center 
    font-size 20px
    font-weight 900
    line-height 1em
    margin-bottom 10px
  &__description
    margin-bottom 10px
    text-align left 
    font-size 13px
    font-weight 400
    line-height 1.2em
    color #565656
    height 90px
  &__image
    display block
    margin 10px auto
    height 150px
    img
      max-width 100%
      height 150px
  &__price
    height 20px
    font-size 16px
    line-height 20px
    font-weight 900
    margin-bottom 10px
    color #000

.category  
  cursor pointer
  display inline-block
  margin 0 15px 10px 15px
  &__body
    position relative
    padding 10px 0px
  &__title
    text-align center 
    font-size 16px
    font-weight 900
    line-height 20px
    display inline-block
  &__image
    display block
    width 40px
    height 40px
    margin auto
    margin-bottom 2px
  &_active
    .category__title
      color #D64D4D
  
      
